<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:tag="order_detail_layout_v2">

        <ProgressBar
            android:id="@+id/progressOrderDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDetailOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDetailOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái:" />

        <TextView
            android:id="@+id/tvDetailPaymentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã thanh toán:" />

        <TextView
            android:id="@+id/tvDetailOrderFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên người nhận:" />

        <TextView
            android:id="@+id/tvDetailOrderPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:" />

        <TextView
            android:id="@+id/tvDetailOrderAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ nhận hàng:" />

        <TextView
            android:id="@+id/tvDetailOrderTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền:" />

        <TextView
            android:id="@+id/tvDetailPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán:"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOrderItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />
        <Button
            android:id="@+id/btnCancelOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy đơn hàng"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn loại da của bạn:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/radioSkinTypeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioDry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khô" />

            <RadioButton
                android:id="@+id/radioOily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dầu" />

            <RadioButton
                android:id="@+id/radioCombination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hỗn hợp" />

            <RadioButton
                android:id="@+id/radioSensitive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhạy cảm" />

            <RadioButton
                android:id="@+id/radioNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình thường" />
        </RadioGroup>

        <Button
            android:id="@+id/btnFinishQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoàn tất"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
